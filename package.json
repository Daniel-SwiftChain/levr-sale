{
  "name": "deth",
  "version": "2.0.0",
  "description": "derived ether",
  "main": "hardhat.config.js",
  "dependencies": {
    "@openzeppelin/contracts": "^2.5.0",
    "csv-writer": "^1.6.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@tenderly/hardhat-tenderly": "^1.0.12",
    "concurrently": "^6.4.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.3.0",
    "ganache-cli": "^6.12.2",
    "hardhat": "^2.3.0",
    "truffle": "^5.3.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/team-toast/deth.git"
  },
  "author": "Team Toast",
  "bugs": {
    "url": "https://github.com/team-toast/deth/issues"
  },
  "homepage": "https://github.com/team-toast/deth#readme",
  "scripts": {
    "ganache": "ganache-cli --networkId $npm_package_config_ganache_networkId --allowUnlimitedContractSize --gasLimit $npm_package_config_ganache_gasLimit --gasPrice $npm_package_config_ganache_gasPrice",
    "start": "concurrently \"npm run ganache\" \"npm run migrate\"",
    "npmCD": "\"cd ./smart-contracts/levr-sale/\"",
    "npmPWD": "\"pwd\"",
    "migrate": "cd ./smart-contracts/levr-sale/ && rm -rf build && truffle migrate --reset --compile-all --network development",
    "test": "concurrently cd ./smart-contracts/levr-sale/ && truffle test"
  },
  "config": {
    "ganache": {
      "networkId": 3431,
      "gasPrice": 25000000000,
      "gasLimit": 6500000
    }
  }
}
